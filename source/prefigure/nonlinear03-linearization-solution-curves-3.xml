<prefigure xmlns="https://prefigure.org"
             label="linearization-solution-curves-3">

<diagram dimensions="(300,300)" margins="25">
  <definition>alpha = 5</definition>
  <definition>f(t,y) = (y[1] + alpha*y[0]*(y[0]^2 + y[1]^2), -y[0] + alpha*y[1]*(y[0]^2 + y[1]^2))</definition>
  <coordinates bbox="[-3,-3,3,3]">
    <grid-axes xlabel="x(t)" ylabel="v(t)"/>


    <definition>gap = 1/2</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-3,gap,3),(-3,gap,3))"/>

    <plot-de-solution function="f" t0="0" t1="6" 
          y0="(0.1,0.1)" axes="(y0,y1)" arrow="yes"  N="400"/>

      <point p="(0.1,0.1)" size="4" fill="blue" stroke="none"></point>

  </coordinates>

      <annotations>
      <annotation ref="figure"
            text="Phase plane for the system of differential equation x prime equals v plus alpha times the quantity x square plus v squared and v prime equals minus x plus alpha times the quantity x square plus v squared for alpha equals 5."/>
    </annotations>

</diagram>

</prefigure>
