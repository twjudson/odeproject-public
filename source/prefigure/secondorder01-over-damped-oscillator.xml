<prefigure xmlns="https://prefigure.org"
             label="over-damped-oscillator">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t) = exp(-t)/2 - exp(-3*t)/2</definition>
  <definition>g(t) = -1/2*e^(-t) + 3/2*e^(-3*t)</definition>
  <coordinates bbox="[0,-1,5,1]">
    <grid-axes xlabel="t" ylabel="x(t),v(t)"/>
    <graph at="position" function='f' />
    <graph at="velocity" function='g' stroke="red" />
    <legend at="legend" anchor="(bbox[2], bbox[3])" 
	    alignment="sw" scale="0.8" opacity="0.5">
      <item ref="position"><m>x(t)</m></item>
      <item ref="velocity"><m>v(t)</m></item>
    </legend>
  </coordinates>

     
    <annotations>
      <annotation ref="figure"
      text="Integral curves for the harmonic oscillator x double prime plus 4 time x prime plus 3 times x equals 0.  The curves approaches the x axis as time increases."/>
    </annotations>
  

</diagram>
</prefigure>

  
