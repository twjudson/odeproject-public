<prefigure xmlns="https://prefigure.org"
             label="change-of-coordinates-1">

  <diagram dimensions="(300,300)" margins="12">
    <definition>f(t,y) = (5*y[0], - y[1])</definition>
    <coordinates bbox="[-4,-4,4,4]">

      <grid-axes xlabel="x(t)" ylabel="y(t)"/>
      <slope-field function="f" system="yes" stroke="black"
      arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
      
        <plot-de-solution function="f" t0="0" t1="2" 
        y0="(0.001,4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

        <plot-de-solution function="f" t0="0" t1="2" 
        y0="(-0.001,4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

        <plot-de-solution function="f" t0="0" t1="2" 
        y0="(0.001,-4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

        <plot-de-solution function="f" t0="0" t1="2" 
        y0="(-0.001,-4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
  
    </coordinates>

    
    <annotations>
      <annotation ref="figure"
        text="Direction field for the system x prime equals five times x and y prime equals minus y.  There is an integral curve in each quadrant that appoaches the horizontal axis and moves away from the vertical axis."/>
      </annotations>
  
  </diagram>

</prefigure>
