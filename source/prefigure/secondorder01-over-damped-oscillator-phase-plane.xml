<prefigure xmlns="https://prefigure.org"
             label="over-damped-oscillator-phase-plane">

<diagram dimensions="(300,300)" margins="5">
  <definition>f(t)=(exp(-t)/2 - exp(-3*t)/2, -1/2*exp(-t) + 3/2*exp(-3*t))</definition>
  <coordinates bbox="(-0.3,-1.5,0.3,1.5)">
    <grid-axes xlabel="x(t)" ylabel="v(t)"/>
    <parametric-curve function="f" domain="(0,20)"
          N="600"/>
  </coordinates>
</diagram>

     
    <annotations>
      <annotation ref="figure"
      text="Phase plane and integral curves for the harmonic oscillator x double prime plus 4 time x prime plus 3 times x equals 0.  The curves approacd the origin as time increases."/>
    </annotations>
    

</prefigure>


