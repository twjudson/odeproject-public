<prefigure xmlns="https://prefigure.org"
             label="nullclines-nonlinear">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t,y) = (y[1] - y[0]^2, y[0] - 2)</definition>
  <coordinates bbox="[-4,-1,4,9]">
      <definition>gap = 1</definition>
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,gap,4),(-1,gap,9))"/>

    <definition>g(x) = x^2</definition>
    <graph function='g' stroke="green"
    thickness="3"/>

    <plot-de-solution function="f" t0="0" t1="11" 
          y0="(0,5)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

    <point p="(0,5)" size="4" fill="blue" stroke="none"></point>
    <line endpoints="((2,-1), (2,9))" stroke="red"
    thickness="3"/>

  </coordinates>

  
      <annotations>
      <annotation ref="figure"
            text="Direction field for x prime equals y minus x squared  and y prime equals x minus two with a solution curve begins at the point (0,5) and travels down and right to x equals two and then curves back up near the parabola y equals x squared.  The x nullcline is given by the parabola y equals x squared.  The y nullcline is given by x equals two."/>
    </annotations>
    
</diagram>
</prefigure>
