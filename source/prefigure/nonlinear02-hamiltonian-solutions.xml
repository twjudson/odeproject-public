<prefigure xmlns="https://prefigure.org"
             label="hamiltonian-solutions">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t,y) = (-2*y[0] - 3*y[1]^3, -3*y[0]^2 + 2*y[1])</definition>
  <coordinates bbox="[-1.75,-1.75,1.75,1.75]">
    <grid-axes xlabel="x(t)" ylabel="y(t)"/>

    <definition>gap = 1/3</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-1.75,gap,1.75),(-1.75,gap,1.75))"/>

    <definition>H(x,y) = x^3 - 2*x*y - y^3</definition>
    <implicit-curve function="H" k="-2" stroke="red" />
    <implicit-curve function="H" k="-1" stroke="green" />
    <implicit-curve function="H" k="0" stroke="purple" />
    <implicit-curve function="H" k="1" stroke="orange" />
    <implicit-curve function="H" k="2" stroke="blue" />
  </coordinates>

      <annotations>
      <annotation ref="figure"
            text="Direction field for x prime equals x minus 3 times y squared and y prime equals minus y.  There are five solution curves that are symmetic about the line y equals minus x.
            "/>
    </annotations>
  
</diagram>

</prefigure>
