<prefigure xmlns="https://prefigure.org"
             label="phase-harmonic-oscillator">

<diagram dimensions="(300,300)" margins="25">
  <definition>f(t,y) = (y[1], -y[0])</definition>
  <coordinates bbox="[-3,-3,3,3]">
    <grid-axes xlabel="x(t)" ylabel="v(t)"/>

    <definition>gap = 1/2</definition>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-3,gap,3),(-3,gap,3))"/>

    <plot-de-solution function="f" t0="0" t1="8" 
          y0="(2,2)" axes="(y0,y1)" arrow="yes"  N="600"/>

  </coordinates>

      <annotations>
      <annotation ref="figure"
            text="Phase plane for the harmonic oscillator system of differential equation x prime equals v and v prime equals minus x"/>
    </annotations>
  
</diagram>

</prefigure>
