<prefigure xmlns="https://prefigure.org"
             label="forced-spring-steady-state">

<diagram dimensions="(300,300)" margins="35">
  <definition>b = 5</definition>
  <definition>k = 4</definition>

  <definition>f(t) = exp(-t)*sin(t) - 21/130*cos(4*t) + 6/65*sin(4*t)</definition>
    <definition>g(t) = - 21/130*cos(4*t) + 6/65*sin(4*t)</definition>
  <coordinates bbox="[0,-0.3,3*pi,.55]">
    <grid-axes xlabel="t" ylabel="x(t)" h-pi-format="yes"/>

       <graph at="xh" function="f" N="400" thickness="1"/>
      <graph at="xp" function="g" stroke="red"/>
    
   <legend anchor="(bbox[2]-1, bbox[3]-0.1)"
      alignment="sw" scale="0.8" opacity="0.5">
      <item ref="xp"><m>x_h + x_p</m></item>
      <item ref="xh"><m>x_p</m></item>
    </legend>

  </coordinates>

    <annotations>
      <annotation ref="figure"
      text="Integral curves for x double prime plus 2 times x prime plus 2 times x equals 3 times cosine of 4 times t and x double prime plus 2 times x prime plus 2 times x equals 0."/>
    </annotations>


</diagram>
  
</prefigure>

