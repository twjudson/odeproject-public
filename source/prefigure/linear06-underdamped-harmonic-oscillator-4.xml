<prefigure xmlns="https://prefigure.org"
             label="underdamped-harmonic-oscillator-4">

<diagram dimensions="(300,300)" margins="12">
  <definition>f(t,y) = (y[1], -y[0]/2 - y[1])</definition>
  <coordinates bbox="[-4,-4,4,4]">

    <grid-axes xlabel="x(t)" ylabel="y(t)"/>
    <slope-field function="f" system="yes" stroke="black"
     arrows="yes" thickness="1" spacings="((-4,1/2,4),(-4,1/2,4))"/>
    
       <plot-de-solution function="f" t0="0" t1="6" 
       y0="(-4,4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="6" 
       y0="(1.8,4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="6" 
       y0="(4,-4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>

      <plot-de-solution function="f" t0="0" t1="6" 
       y0="(-1.8,-4)" axes="(y0,y1)" arrow="yes" stroke="blue"/>
 
  </coordinates>

    
    <annotations>
    <annotation ref="figure"
    text="Direction field for the system x prime equals two times x  and y prime equals minus x plus y.  There are integral curves spiral towards the origin in a clockwise direction."/>
    </annotations>
    


</diagram>

</prefigure>
